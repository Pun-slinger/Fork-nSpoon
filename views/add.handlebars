{{#if message}}
  <div class="alert">
    <strong>Error:</strong> {{message}}
  </div>
{{/if}}

<div class="addform">
      <form action="/add" method="POST">
        <fieldset>
          <legend><b>Add New Package</b></legend>

          <label for="packageName"><b>Name:</b></label>
          <input type="text" name="packageName" id="packageName" placeholder="Name..." required>

          <label for="packagePrice"><b>Price:</b></label>
          <input type="number" name="packagePrice" id="packagePrice" step=".01" min="0" required><br>

          <label for="packageDesc"><b>Description:</b></label><br>
          <textarea name="packageDesc" id="packageDesc" cols="50" rows="3" placeholder="Description..." required></textarea><br>

          <label for="packageMealNum"><b>Number of Meals:</b></label>
          <input type="number" name="packageMealNum" id="packageMealNum" min="0" required>

          <label for="packageDisplay"><b>Display on Front Page ?:</b></label>
          <input type="checkbox" name="packageDisplay" id="packageDisplay"><br>

          <label for="packageImageUrl"><b>Image Url:</b></label>
          <input type="text" name="packageImageUrl" id="packageImageUrl" placeholder="URL..."><br>

          <input type="submit" name="submit" id="submit" value="Package Add">
        </fieldset>
      </form>
    </div>